<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaS6Agualotuna.viewEliminarA" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Eliminar un dato" FontSize="Medium"/>

            <Entry x:Name="txtCodigo" IsEnabled="False" />
            <Entry x:Name="txtNombre" IsEnabled="False" />
            <Entry x:Name="txtApellido" IsEnabled="False" />
            <Entry x:Name="txtEdad" IsEnabled="False" />

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" Grid.Row="0" Grid.Column="0" />
                <Button x:Name="btnRegresar" Text="Regresar" Clicked="btnRegresar_Clicked" Grid.Row="0" Grid.Column="1" />

            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>